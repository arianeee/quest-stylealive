<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
        <!-- Customize your theme here. -->
        <style name="Main">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name=" android:gravity">center</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:paddingTop">20dp</item>

        </style>


        <style name="layout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
        </style>
        <style name="layout.autre">
            <item name="android:layout_marginBottom">10dp</item>
            <item name="android:layout_marginTop">20dp</item>
            <item name="android:textColor">@android:color/holo_red_dark</item>
            <item name="android:textSize">24sp</item>
            <item name="android:padding">10dp</item>
        </style>
        <style name="layout.autre.autrex">
            <item name="android:background">@android:color/darker_gray</item>
        </style>


        <style name="wrapc">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>
        <style name="wrapc.text">
            <item name="android:paddingLeft">20dp</item>
            <item name="android:paddingRight">20dp</item>
            <item name="android:textColor">@android:color/black</item>
            <item name="android:textSize">16sp</item>
        </style>
        <style name="wrapc.textg">
            <item name="android:paddingLeft">20dp</item>
            <item name="android:paddingRight">20dp</item>
            <item name="android:textColor">@android:color/darker_gray</item>
            <item name="android:textSize">16sp</item>
        </style>
        <style name="wrapc.texto">
            <item name="android:paddingLeft">20dp</item>
            <item name="android:paddingRight">20dp</item>
            <item name="android:textColor">@android:color/holo_orange_dark</item>
            <item name="android:textSize">30sp</item>
        </style>
        <style name="wrapc.imagevi">

            <item name="android:paddingRight">10dp</item>
            <item name="android:src">@drawable/ic_computer_black_24dp</item>

        </style>
        <style name="wrapc.linear2">

            <item name="android:paddingBottom">20dp</item>
            <item name="android:orientation">vertical</item>

        </style>




</resources>
